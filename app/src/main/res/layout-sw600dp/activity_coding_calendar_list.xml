<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.srv_twry.studentcompanion.CodingCalendarListActivity">

    <FrameLayout
        android:id="@+id/frame_layout_coding_calendar_list"
        android:layout_width="290dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/frame_layout_coding_calendar_list">

        <TextView
            android:id="@+id/tv_click_contest_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="@string/contest_click_message"
            tools:ignore="InconsistentLayout" />

        <FrameLayout
            android:id="@+id/frame_layout_contest_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="InconsistentLayout">
        </FrameLayout>

    </FrameLayout>


</android.support.constraint.ConstraintLayout>
